<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <!-- HELM SCREEN -->
    <screen id="mainviewer" controller="gameplay.MainViewer">
	<layer id="background" childLayout="center">
            
	</layer>
	<layer id="foreground" childLayout="vertical">
	    <panel id="panel_top" height="10%" width="100%" childLayout="horizontal" backgroundColor="#000">
		<control type="label" id="mainscreenlabel" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
	    </panel>
	    <panel id="viewscreen" height="80%" width="100%"></panel>
	    <panel id="panel_bottom" height="10%" width="100%" childLayout="horizontal"></panel>
	</layer>
    </screen>
    <!-- END HELM SCREEN -->
</nifty>