<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- Server Screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="serverMain" controller="server.ServerController">
	<layer id="foreground" backgroundColor="#000" childLayout="vertical">
	    <panel id="panel" height="95%" width="95%" align="center" valign="center" childLayout="center" visibleToMouse="false" backgroundColor="#fff">
		<control type="listBox" id="listBox" horizontal="off" displayItems="15" width="100%" height="500px" childLayout="vertical" visibleToMouse="false"/>
	    </panel>
	</layer>
    </screen>
</nifty>
